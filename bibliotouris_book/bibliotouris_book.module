  }
}

function bibliotouris_book_node_validate($node, $form, &$form_state) {
  if ($node->type == 'book') {
    if ($form_state['values']['field_isbn']['und']['0']['value'] != NULL) {
      $isbn = str_replace(array('-', '/', ' '), '', $form_state['values']['field_isbn']['und']['0']['value']);
      checkisbn($isbn);
    }
  }
}

